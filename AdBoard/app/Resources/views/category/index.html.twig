

{% block cat %}
    <h1>Categories</h1>

    <div class="btn-group btn-group-justified">
        {% for category in categories %}

            <a class="btn btn-primary" href="{{ path('category_show', { 'id': category.id }) }}"> {{category.name}}</a>

        {% endfor %}
    </div>
    <div class="btn-group btn-group-justified">
        <a class="btn" href="{{ path('category_new') }}">Create a new category</a>
    </div>

{% endblock %}
